<div class="container upper">
    <div class="jumbotron text-center">
        <h1>Eat-Da-Burger!</h1>
    </div>
    <div class="newBurger">
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
                            <!-- {{this.Date}} -->
                        </div>
                        <div class="col-xs-3 text-center">
                            <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                                <input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
                                <button type="submit" class="btn btn-default">Devour it!</button>
                            </form>
                        </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="devoured">
        <div class="col-xs-6 text-center" class="task">
            {{#each burgers}}
                {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <h4>Enter a burger you want to eat, then click the "Submit" button.</h4>
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="textarea">
                <button type="submit" class="btn-lg btn-info" id="text-enter-button">Submit</button>
            </form>
        </div>
    </div>
</div>
